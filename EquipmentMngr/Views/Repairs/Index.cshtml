@model IEnumerable<EquipmentMngr.Data.Entities.Repair>

@{
    ViewData["Action"] = "Index";
    ViewData["Title"] = "Repairs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-title">
            <h5>@ViewBag.Title @ViewBag.Action</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <p>
                <a asp-action="Create" type="button" class="btn btn-primary"><i class="fa fa-plus"></i> Create</a>
            </p>
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DateShipped)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrackingNum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recipient)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StreetAddress1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StreetAddress2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.States)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Zip)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactPhone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReplacementSerialNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Returned)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateReturned)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedByUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedByUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateShipped)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrackingNum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Recipient)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StreetAddress1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StreetAddress2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.States.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Zip)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactPhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReplacementSerialNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Returned)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateReturned)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedByUser)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedByUser)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        <a type="button" data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-secondary btn-sm" href="@Url.Action("Edit", new {id = @item.Id})">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <button type="submit" data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-primary btn-sm delete" onclick="return delete(this)">
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />

    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    </environment>

    <script type="text/javascript">
        //<---Set parameter for Datable customization--->//
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                autowidth: true,
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'LocationFile' },
                    { extend: 'pdf', title: 'LocationFile' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });


        });

        //<---Set Parameters for SweetAlert on delete function--->//
        $('.delete').click(function (event) {
            swal({
                title: "Are you sure?",
                text: "Your will not be able to recover this record!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#8b2346",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "No, cancel please!",
                closeOnConfirm: false,
                closeOnCancel: true
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $('form').submit();
                        return true;
                    } else {
                        return false;
                    }
                });
            return false;
        });

        //<---Initialize Tooltip function--->//
        $(document).ready(function () {
            $("body").tooltip({ selector: '[data-toggle=tooltip]' });
        });

    </script>
}